<div class="editprofile-container">
  <h4>Edit Profile</h4>
  
  {{#if error}}
    <div class="error">{{error}}</div>
  {{/if}}
  
  <form id="editProfileForm" action="/users/editprofile/{{user._id}}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="bio">Bio</label>
      <textarea id="bio" name="bio" rows="4" maxlength="500">{{user.Bio}}</textarea>
      <small>Max 500 characters</small>
    </div>
    
    <div class="form-group">
      <label for="profilePicture">Profile Picture</label>
      <input type="file" id="profilePicture" name="profilePicture" accept="image/jpeg,image/png,image/gif,image/webp">
      <small>Current picture: <img src="{{user.ProfilePicture}}" alt="Current Profile" width="100"></small>
      <small>Max file size: 5MB. Accepted formats: jpg, png, gif, webp</small>
    </div>
    
    <button type="submit">Save Changes</button>
  </form>

  <div id="editError" class="error" hidden>I'm an error passed down through Client-Side JS.</div>
</div>