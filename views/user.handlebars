{{#if notFound}}
    <div id="serverError" class="error">{{notFound}}</div>

    <a href="/">Go back to Home</a>
{{else}}
<div class="user-profile">
  <img class="pfp" src="{{ProfilePicture}}" alt="Profile Picture">
  <h2>{{Username}}</h2>
  <p>Bio: {{Bio}}</p>
  <p>Writing Score: {{WritingScore}}</p>

  <h3>Writing Groups</h3>
  {{#if Groups}}
    <ul>
      {{#each Groups}}
        <li>{{Name}} - {{Bio}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>Not a member of any writing groups yet.</p>
  {{/if}}

  <h3>Bookmarks</h3>
  {{#if Bookmarks}}
    <ul>
      {{#each Bookmarks}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>No bookmarks yet.</p>
  {{/if}}
</div>
{{/if}}